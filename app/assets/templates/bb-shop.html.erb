				<div class="dv-container-history">
					<div class="form-group">
						<div class="icon-duck-sm"></div>
						<h4 class="lbl-orange">Cart</h4>
					</div>
					<div class="form-group">
						<div class="row" ng-repeat="c in cart.shopping_cart_items">
							<div class="dv-history-item-container">
								<div class="col-md-8">
									<p>
										{{(products | filter:{ id: c.product_id })[0].short_description_en_US}}<span ng-show="c.qty > 1"> x {{c.qty}}</span>
										<br/>
										<span class="amount">$ {{c.unit_price * c.qty}}</span>
										<a ng-show="c.qty > 1" class="btn btn-xs btn-default" ng-click="MinusOneFromCart(c)"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></a>
										<a class="btn btn-xs btn-default" ng-click="PlusOneFromCart(c)"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
										<a class="btn btn-xs btn-default" ng-click="RemoveFromCart(c)"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
									</p>
								</div>
								<div class="col-md-4">
									<div class="dv-history-image-container">
										<img ng-src="uploads/products/{{(products | filter:{ id: c.product_id })[0].sku}}.png" style="width:100%">
									</div>
								</div>

							</div>
						</div>
						<div ng-show="cart.shopping_cart_items.length">
							<div class="clear"></div>
							<div class="col-md-12">
								<div class="dv-separator"></div>
							</div>
							<div class="clear"></div>
							<h4>Total : $ {{total}}</h4>
							<br>
							<a href class="btn defaultbtn">Checkout</a>
						</div>
