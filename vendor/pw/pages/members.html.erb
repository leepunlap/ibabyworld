<div id="dv-members" class="content" ng-controller="ImportController">
	<div class="jumbotron" data-pages="parallax">
		<div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
			<div class="inner">
				<ul class="breadcrumb">
					<li><p>Admin</p></li>
					<li><a ui-sref="admin.members" class="active">Members</a></li>
				</ul>
			</div>
		</div>

		<div class="container-fluid container-fixed-lg bg-white">
			<div class="panel panel-transparent">
				<div class="panel-heading">
					<!-- <div class="panel-title">Article</div> -->
					<div class="clearfix"></div>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-2">
							<button type="button" class="btn btn-success pull-left" ngf-select ng-model="files"><i class="fa fa-upload"></i> Import</button>
						</div>
						<div class="col-md-10">
							<div class="form-group" ng-show="isProcessing">
								<div class="row dv-processing">
									<div class="col-sm-4 dv-info-processing" ><p>Please wait while importing members </p></div>
					    			<div class="col-sm-1 dv-info-processing-loader">
						    			<div ng-activity-indicator="DottedGrey">
						    				<div ng-show="AILoading" class="ai-dotted .ai-inner1"></div>
						    			</div>
						    		</div>
						    	</div>
			    			</div>
			    		</div>
					</div>
					<div class="table-responsive">
						<table id="members" class="table table-hover">
							<thead>
								<tr>
		 							<th style="width:10%">Provider</th>
		 							<th style="width:20%">Email Address</th>
		 							<th style="width:20%">Name</th>
		 							<th style="width:5%">Gender</th>
		 							<th style="width:10%">Birtday</th>
									<th style="width:15%">Registered</th>
								</tr>
							</thead>
							<tbody>
								<tr ng-repeat="member in members">
									<td class="v-align-middle ">
										<p>{{member.oauth_provider | capitalize}}</p>
									</td>
									<td class="v-align-middle ">
										<p>{{member.email}}</p>
									</td>
									<td class="v-align-middle ">
										<p>{{member.last_name}}, {{member.first_name}}</p>
									</td>
									<td class="v-align-middle ">
										<p ng-hide="{{member.gender}}">Male</p>
										<p ng-show="{{member.gender}}">Female</p>
									</td>
									<td class="v-align-middle">
										<p ng-show="{{member.birth_date}}">{{member.birth_date | cmdate:'MMMM dd, yyyy'}}</p>
									</td>
									<td class="v-align-middle">
										<p>{{member.created_at | cmdate:'MMMM dd, yyyy HH:mm'}}</p>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div id="myModal" modal="showModal" class="modal fade" role="dialog" style="min-hieght: 300px;">
		<div class="modal-dialog">
	    <!-- Modal content-->
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	        <h4 class="modal-title">Import successful</h4>
	        <p>You have successfully import new members:</p>
	      </div>
	      <div class="modal-body">
	        <div class="row dv-notification" style="text-align: center;">
				<div class="col-sm-4">
					<h5 name="success">Success:<br/><strong>{{success}}</strong></h5> 
				</div>
				<div class="col-sm-4">
					<h5 name="errors">Errors:<br/><strong>{{errors}}</strong></h5>
				</div>
				<div class="col-sm-4">
					<h5 name="skipped">Skipped:<br/><strong>{{skipped}}</strong></h5>
				</div>
				</div>
			</div>
	      </div>
	      <div class="modal-footer">
	        <button class="btn btn-success" ng-click="ok()">Okay</button>
	      </div>
	    </div>
		</div>
	</div>

