.red {
	color: #cc0000;
}

.poster {
	position: relative;
}

.poster .preview {
	height: 300px;
	overflow: hidden;;
	background-color:  #efefef;
}

.poster .preview img {
    width: 100%;
    border: 0 none;
    box-shadow: none;
}

.poster .btn-file {
    position: absolute;
    bottom: 10px;
    left: 10px;
    overflow: hidden;
}
</style>

<div class="content">
	<br/>
	<div class="container-fluid container-fixed-lg">
		<form name="productForm" role="form">
			<div class="row">
				<div class="col-md-8">
					<div class="panel panel-default">
						<div class="panel-heading">
							<div class="panel-title">New Product</div>
						</div>
						<div class="panel-body">
							<p>Please complete all the <strong class="red">*</strong> required fields</p>
						
							<!-- <div class="form-group">
								<select class="cs-select cs-skin-slide" data-init-plugin="cs-select">
									<option value="sightseeing">Web-safe</option>
									<option value="business">Helvetica</option>
									<option value="honeymoon">SegeoUI</option>
								</select>
							</div> -->

							<div class="form-group">
								<label><strong class="red">*</strong> Sku</label>
								<input type="text" class="form-control" require="" placeholder="Enter a sku here" ng-model="product.sku">
							</div>	

							<div class="form-group">
								<label><strong class="red">*</strong> Name</label>
								<input type="text" class="form-control" require="" placeholder="Enter a name EN here" ng-model="product.name_en_US"><br/>
								<input type="text" class="form-control" require="" placeholder="Enter a name CN here" ng-model="product.name_zh_CN"><br/>
								<input type="text" class="form-control" require="" placeholder="Enter a name HK here" ng-model="product.name_zh_HK">
							</div>

							<div class="form-group">
								<label><strong class="red">*</strong> Short Description</label>
								<span class="help">"Must be 100 characters long"</span>
								<textarea class="form-control" placeholder="Enter a short description EN" ng-model="product.short_description_en_US"></textarea><br/>
								<textarea class="form-control" placeholder="Enter a short description CN" ng-model="product.short_description_zh_CN"></textarea><br/>
								<textarea class="form-control" placeholder="Enter a short description HK" ng-model="product.short_description_zh_HK"></textarea>
							</div>
	
							<div class="form-group">
								<label><strong class="red">*</strong> Full Description Body (EN)</label>
								<textarea name="content" ng-model="product.desciption_en_US" placeholder="Enter your product content EN here" required="" ckeditor="editorOptions"></textarea>
							</div>

							<div class="form-group">
								<label><strong class="red">*</strong> Full Description Body (CN)</label>
								<textarea name="content" ng-model="product.desciption_zh_CN" placeholder="Enter your product content CN here" required="" ckeditor="editorOptions"></textarea>
							</div>

							<div class="form-group">
								<label><strong class="red">*</strong> Full Description Body (HK)</label>
								<textarea name="content" ng-model="product.desciption_zh_HK" placeholder="Enter your product content ZH here" required="" ckeditor="editorOptions"></textarea>
							</div>
						</div>
					</div>
				</div>

				<!-- <div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<div class="panel-title">Image Attachment</div>
						</div>
						<div class="panel-body no-scroll no-padding">
							<div class="dropzone" dropzone="dropzoneConfig">
						    </div>
						</div>
					</div>
 				</div> -->

 				

				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="form-group">
								<label>Brand</label>
								<input type="text" class="form-control" ng-model="product.brand_id" placeholder="Enter your brand id here"></input>
							</div>

							<div class="form-group">
								<label>Unit Price</label>
								<input type="text" class="form-control" ng-model="product.unit_price" placeholder="Enter your unit price here"></input>
							</div>
						</div>
					</div>
 				</div>

 				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="form-group">
								<label>Discounted Price</label>
								<input type="text" class="form-control" ng-model="product.discounted_price" placeholder="Enter your discounted price here"></input>
							</div>

							<div class="form-group">
								<label>Discount description</label>
								<input type="text" class="form-control" ng-model="product.discount_description_en_US" placeholder="Enter your discount description EN here"></input><br/>
								<input type="text" class="form-control" ng-model="product.discount_description_zh_CN" placeholder="Enter your discount description CN here"></input><br/>
								<input type="text" class="form-control" ng-model="product.discount_description_zh_HK" placeholder="Enter your discount description HK here"></input>
							</div>
						</div>
					</div>
 				</div>

 				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="form-group" style="padding-bottom: -10px;">
								<label>Tags</label>
								<span class="help">"Separate tags with commas"</span>
								<tags-input ng-model="product.tags" style="margin-top: -10px;margin-bottom: -15px;"></tags-input>
							</div>

							
						</div>
					</div>
 				</div>

 				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<div class="panel-title">Save As</div>
						</div>
						<div class="panel-body">
							<p>Do you want to publish your new product?</p>
					
							<div class="radio radio-success">
								<input type="radio" checked="checked" value="0" name="optionyes" id="yes" ng-model="product.status">
								<label for="yes">Draft</label>
								<input type="radio" value="2" name="optionyes" id="no" ng-model="product.status">
								<label for="no">Publish</label>
							</div>

							<button class="btn btn-primary" ng-click="doCreateProduct(product)">Submit</button>
						</div>
					</div>
 				</div>
			</div>
		</form>

		
	</div>
</div>