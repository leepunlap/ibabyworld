<style>
.red {
	color: #cc0000;
}

.poster {
	position: relative;
}

.poster .preview {
	height: 300px;
	overflow: hidden;;
	background-color:  #efefef;
}

.poster .preview img {
    width: 100%;
    border: 0 none;
    box-shadow: none;
}

.poster .btn-file {
    position: absolute;
    bottom: 10px;
    left: 10px;
    overflow: hidden;
}
</style>

<div class="content">
	<br/>
	<div class="container-fluid container-fixed-lg">
		<form name="productForm" role="form">
			<div class="row">
				<div class="col-md-8">
					<div class="panel panel-default">
						<div class="panel-heading">
							<div class="panel-title">New Product</div>
						</div>
						<div class="panel-body">
							<p>Please complete all the <strong class="red">*</strong> required fields</p>
						
							<!-- <div class="form-group">
								<select class="cs-select cs-skin-slide" data-init-plugin="cs-select">
									<option value="sightseeing">Web-safe</option>
									<option value="business">Helvetica</option>
									<option value="honeymoon">SegeoUI</option>
								</select>
							</div> -->

							<div class="form-group">
								<label><strong class="red">*</strong> Title</label>
								<input type="text" class="form-control" require="" placeholder="Enter a title here" ng-model="product.title">
							</div>

							<div class="form-group">
								<label><strong class="red">*</strong> Short Description</label>
								<span class="help">"Must be 100 characters long"</span>
								<textarea class="form-control" placeholder="Enter a short description" ng-model="product.description"></textarea>
							</div>
	
							<div class="form-group">
								<label><strong class="red">*</strong> Content Body</label>
								<textarea id="content" name="content" ng-model="product.content" placeholder="Enter your product content here" required="" ckeditor="editorOptions" ng-model="product.content"></textarea>
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<div class="panel-title">Poster Attachment</div>
						</div>
						<div class="panel-body">
<ng-dropzone dropzone="dropzone" dropzone-config="dropzoneConfig">
  <input name="file" type="file" multiple />
</ng-dropzone>
						</div>
</div>
</div>
 				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="form-group" style="padding-bottom: -10px;">
								<label>Tags</label>
								<span class="help">"Separate tags with commas"</span>
								<tags-input ng-model="product.tags" style="margin-top: -10px;margin-bottom: -15px;"></tags-input>
							</div>
						</div>
					</div>
 				</div>

 				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<div class="panel-title">Save As</div>
						</div>
						<div class="panel-body">
							<p>Do you want to publish your new product?</p>
					
							<div class="radio radio-success">
								<input type="radio" checked="checked" value="0" name="optionyes" id="yes" ng-model="product.status">
								<label for="yes">Draft</label>
								<input type="radio" value="2" name="optionyes" id="no" ng-model="product.status">
								<label for="no">Publish</label>
							</div>

							<button class="btn btn-primary" ng-click="doCreateProduct(product)">Submit</button>
						</div>
					</div>
 				</div>
			</div>
		</form>
	</div>
</div>