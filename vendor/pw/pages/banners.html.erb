<div class="content">
	<div class="jumbotron" data-pages="parallax">
		<div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
			<div class="inner">
				<ul class="breadcrumb">
					<li><p>Admin</p></li>
					<li><a ui-sref="banners" class="active">Banners</a></li>
				</ul>
			</div>
		</div>

		<div class="container-fluid container-fixed-lg bg-white">
			<div class="panel panel-transparent">
				<div class="panel-heading">
					<!-- <div class="panel-title">Banner</div> -->
					<div class="btn-group pull-right m-b-10">
						<button type="button" class="btn btn-default" ng-click="doNewBanner()">Add new</button>
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
							<span class="caret"></span>
						</button>

						<ul class="dropdown-menu" role="menu">
							<li><a href="tables.html#">Settings</a></li>
							<li><a href="tables.html#">Help</a></li>
						</ul>
					</div>

					<div class="clearfix"></div>
				</div>

				<div class="panel-body">
					<form name="banners" class="table-responsive">
						<table id="banners" class="table table-hover">
							<thead>
								<tr>
								<th style="width:1%">
									<button class="btn" ng-click="doDeleteBanner()"><i class="pg-trash"></i></button>
								</th>
								<th style="width:20%"></th>
								<th style="width:15%">Name</th>
								<th style="width:20%">Tags</th>
								<th style="width:15%">Last Update</th>
								<th style="width:15%">Actions</th>
							</tr>
							</thead>
							<tbody>
								<!-- <tr ng-repeat="banner in banners" ng-bind-html="banner.content"> -->
								<tr ng-repeat="banner in banners">
									<td class="v-align-middle">
										<div class="checkbox" style="margin-top: -15px;">
											<input type="checkbox" value="{{banner.id}}" ng-model="checkedBannerIds[banner.id]" id="checkbox{{banner.id}}">
											<label for="checkbox{{banner.id}}"></label>
										</div>
									</td>
									<td class="v-align-middle ">
										<img ng-src="{{}}"/>
									</td>
									<!-- <td class="v-align-middle">
										{{banner.content | limitTo: 150}}
									</td> -->
									<td class="v-align-middle">
										<p><a ui-sref="admin.banners-edit({ id: {{banner.id}} })">{{banner.name}}</a></p>
									</td>
									<td>
										<a href="" ng-repeat="tag in banner.tags">{{tag.name}}{{$last ? '' : ',' }} </a>
									</td>
									<td class="v-align-middle">
										<p>{{banner.created_at| cmdate:'MMMM dd, yyyy HH:mm'}}</p>
									</td>
									<td>
										<a href="" ui-sref="admin.banners-edit({ id: {{banner.id}} })" class="btn btn-primary">Edit</a> <a href="" ng-click="doDeleteSingleBanner(banner.id)" class="btn btn-danger">Delete</a>
									</td>
								</tr>
							</tbody>
						</table>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
