<div class="content">
	<div class="jumbotron" data-pages="parallax">
		<div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
			<div class="inner">
				<ul class="breadcrumb">
					<li><p>Admin</p></li>
					<li><a ui-sref="brands" class="active">Brands</a></li>
				</ul>
			</div>
		</div>

		<div class="container-fluid container-fixed-lg bg-white">
			<div class="panel panel-transparent">
				<div class="panel-heading">
					<!-- <div class="panel-title">Brand</div> -->
					<div class="btn-group pull-right m-b-10">
						<button type="button" class="btn btn-default" ng-click="doNewBrand()">Add new</button>
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
							<span class="caret"></span>
						</button>

						<ul class="dropdown-menu" role="menu">
							<li><a href="tables.html#">Settings</a></li>
							<li><a href="tables.html#">Help</a></li>
						</ul>
					</div>

					<div class="clearfix"></div>
				</div>

				<div class="panel-body">
					<form name="brands" class="table-responsive">
						<table id="brands" class="table table-hover">
							<thead>
								<tr>
								<th style="width:1%">
									<button class="btn" ng-click="doDeleteBrand()"><i class="pg-trash"></i></button>
								</th>
								<th style="width:20%">Image</th>
								<th style="width:15%">Name</th>
								<th style="width:15%">Last Update</th>
								<th style="width:15%">Actions</th>
							</tr>
							</thead>
							<tbody>
								<!-- <tr ng-repeat="brand in brands" ng-bind-html="brand.content"> -->
								<tr ng-repeat="brand in brands">
									<td class="v-align-middle">
										<div class="checkbox" style="margin-top: -15px;">
											<input type="checkbox" value="{{brand.id}}" ng-model="checkedBrandIds[brand.id]" id="checkbox{{brand.id}}">
											<label for="checkbox{{brand.id}}"></label>
										</div>
									</td>
									<td class="v-align-middle ">

									</td>
									<!-- <td class="v-align-middle">
										{{brand.content | limitTo: 150}}
									</td> -->
									<td>
										<p><a ui-sref="admin.brands-edit({ id: {{brand.id}} })">{{brand.name_en_US}}</a></p>
									</td>
									<td class="v-align-middle">
										<p>{{brand.created_at| cmdate:'MMMM dd, yyyy HH:mm'}}</p>
									</td>
									<td>
										<a href="" ui-sref="admin.brands-edit({ id: {{brand.id}} })" class="btn btn-primary">Edit</a> <a href="" ng-click="doDeleteSingleBrand(brand.id)" class="btn btn-danger">Delete</a>
									</td>
								</tr>
							</tbody>
						</table>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
